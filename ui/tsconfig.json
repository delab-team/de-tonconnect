{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "node"],
    "emitDeclarationOnly": true,
    "noEmit": false,
    "isolatedModules": false,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    },
    "rootDir": "src",
    "outDir": "./lib"
  },
  "include": [
    "./src"
  ]
}
